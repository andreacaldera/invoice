<style>
    .heading-block {
        margin-top: 6px;
    }

    .pdf-label {
        font-style: italic;
    }

    .smaller-font {
        font-family: Gill Sans, Verdana;
        font-size: 11px;
        line-height: 14px;
    }

    .medium-font {
        font-family: times, Times New Roman, times-roman, georgia, serif;
        color: #444;
        margin: 0;
        padding: 0px 0px 6px 0px;
        font-size: 20px;
        line-height: 44px;
        font-weight: bold;
    }

    .bigger-font {
        font-family: times, Times New Roman, times-roman, georgia, serif;
        color: #444;
        margin: 0;
        padding: 0px 0px 6px 0px;
        font-size: 51px;
        line-height: 44px;
        font-weight: bold;
    }

    .main-header {
        margin-top: 15px;
    }

    .main {
        margin-top: 40px;
        width: 90%;
        margin-left: 5%;
        margin-right: 5%;
    }

    .main-table {
        border-collapse: collapse;
        width: 100%;
    }

    .main-table thead {
        font-family: Gill Sans, Verdana;
        font-size: 11px;
        line-height: 14px;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: bold;
    }

    .main-table td {
        text-align: center;
        padding: 5px;
    }

    .main-table td.border-left {
        border-left-width: 1px;
        border-left-color: black;
        border-left-style: solid;
    }

    .main-table td.border-top {
        border-top-width: 1px;
        border-top-color: black;
        border-top-style: solid;
    }

    .main-table td.border-bottom {
        border-bottom-width: 1px;
        border-bottom-color: black;
        border-bottom-style: solid;
    }

    .main-table td.border-right {
        border-right-width: 1px;
        border-right-color: black;
        border-right-style: solid;
    }

    .main-table td:not(.custom-border) {
        border-width: 1px;
        border-color: black;
        border-style: solid;
    }

    .main-table td[colspan="1"], td:not([colspan]) {
        width: 16%;
    }

    .main-table td[colspan="2"] {
        width: 33%;
    }

    .main-table td[colspan="3"] {
        width: 50%;
    }

    .indented-1 {
        padding-left: 30px !important;
    }

    .indented-2 {
        padding-left: 20px !important;
    }

    td.text-left {
        text-align: left;
    }

    .total-label {
        text-align: right !important; /* TODO replace important */
        padding-right: 30px !important; /* TODO replace important */
    }
</style>

<% if (siteFurnitures) { %>
<a id="download-pdf" class="btn btn-default" href="/pdf/<%= invoiceId %>">download pdf</a>
<% } %>

<div class="main">

    <table class="main-table smaller-font ">
        <thead>
        </thead>

        <tr>
            <td colspan="6" class="indented-1 custom-border border-top border-left border-right text-left">
                <div class="bigger-font main-header"><%= companyName %></div>
            </td>
        </tr>
        <tr>
            <td colspan="6"
                class="heading-text custom-border border-bottom border-left border-right text-left indented-1"
                style="padding-bottom: 20px;">
                <div class="indented-2">
                    <div class="heading-block">
                        <div><%= companyAddressLine1 %></div>
                        <div><%= companyAddressLine2 %></div>
                        <div><%= companyAddressLine3 %></div>
                    </div>
                    <div class="heading-block"><%= companyAccountDetails %></div>
                    <div class="heading-block"><span
                                class="pdf-label">Company registration number: </span><%= companyRegistrationNumber %>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="custom-border" colspan="6"></td>
        </tr>
        <tr>
            <td colspan="6" class="custom-border border-left border-right border-top indented-1 text-left">
                <div class="pdf-label">Invoice to</div>
            </td>
        </tr>
        <tr>
            <td colspan="6"
                class="heading-text custom-border border-bottom border-left border-right indented-1 text-left"
                style="padding-bottom: 20px;">
                <div class="heading-block medium-font"><%= recipient %></div>
                <div class="heading-block indented-2">
                    <div><%= recipientAddress %></div>
                    <div><%= recipientPostCode %></div>
                    <div><%= recipientTown %></div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="custom-border" colspan="6"></td>
        </tr>
        <tr>
            <td colspan="2"><span class="pdf-label">Consultant:</span> <%= consultant %> </td>
            <td colspan="2"><span class="pdf-label">Date:</span> <%= today %> </td>
            <td colspan="2"><span class="pdf-label">Invoice number:</span> <%= invoiceNumber %> </td>
        </tr>
        <tr>
            <td class="custom-border" colspan="6"></td>
        </tr>
        <tr>
            <td class="pdf-label">Days</td>
            <td class="pdf-label" d>Rate (Â£/day)</td>
            <td colspan="2" class="pdf-label description">Description</td>
            <td class="pdf-label">Amount</td>
            <td class="pdf-label">VAT (20%)</td>

        </tr>
        <% for(var i = 0; i < items.length; i++) { %>
        <tr class="invoice-row">
            <td class="days"><%= items[i].days %></td>
            <td class="rate"><%= items[i].rate %></td>
            <td colspan="2" class="description"><%= items[i].description %></td>
            <td class="amount"><%= items[i].amount %></td>
            <td class="vat"><%= items[i].vat %></td>
        </tr>
        <tr>
            <td class="custom-border border-right border-left" colspan="6"></td>
        </tr>
        <tr>
            <td class="custom-border border-left"></td>
            <td class="custom-border"></td>
            <td colspan="2" class="total-label custom-border pdf-label">Total</td>
            <td class="total"><strong><%= total %></strong></td>
            <td class="custom-border border-right"></td>
        </tr>
        <tr>
            <td class="custom-border border-left"></td>
            <td class="custom-border"></td>
            <td colspan="2" class="total-label custom-border pdf-label">VAT (<%= vatNumber %>)</td>
            <td class="vatTotal"><%= vatTotal %></td>
            <td class="custom-border border-right"></td>
        </tr>
        <tr>
            <td class="custom-border border-right border-left" colspan="6"></td>
        </tr>
        <tr>
            <td class="custom-border border-bottom border-left"></td>
            <td class="custom-border border-bottom"></td>
            <td colspan="2" class="total-label custom-border border-bottom pdf-label">Invoice Total</td>
            <td class="invoice-total"><strong><%= invoiceTotal %></strong></td>
            <td class="custom-border border-bottom border-right"></td>
        </tr>
        <% } %>
    </table>
</div>