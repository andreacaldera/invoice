<form role="form" class="form-horizontal" method="post" action="preview">

    <% fields.forEach(function(field){ %>
    <% if (field.placeholder != 'rate') { %>
    <div class="form-group">
        <label for="<%= field.placeholder %>" class="col-sm-2 control-label"><%= field.label %></label>

        <div class="col-sm-5">
            <input type='input' name='<%= field.placeholder %>' value='<%= field.value %>'>
        </div>
    </div>
    <% } %>
    <% }) %>

    <div class="form-group">
        <label for="invoiceNumber" class="col-sm-2 control-label">invoice number</label>

        <div class="col-sm-5">
            <input type='input' name='invoiceNumber'>
        </div>
    </div>

    <div class="invoice-item-row">
        <div class="control-group col-sm-offset-2" style="display:inline-block">
            <label class="control-label" for="description">description</label>

            <div class="controls" style="display:inline-block">
                <input placeholder="description" type='input' name='description'>
            </div>
        </div>
        <div class="control-group" style="display:inline-block">
            <label class="control-label" for="days">days</label>

            <div class="controls" style="display:inline-block">
                <input placeholder="days" type='input' name='days'>
            </div>
        </div>
        <div class="control-group" style="display:inline-block">
            <label class="control-label" for="rate"><%= rate.label %></label>

            <div class="controls" style="display:inline-block">
                <input placeholder="rate" type='input' name='<%= rate.placeholder %>' value="<%= rate.value %>">
            </div>
        </div>

        <div class="control-group remove-invoice-item-block" style="display:none">
            <div class="controls" style="display:inline-block">
                <span class="remove-invoice-item glyphicon glyphicon-minus red" aria-hidden="true"></span>
            </div>
        </div>
    </div>

    <div class="form-group add-invoice-item-block">
        <div class="col-sm-offset-2 col-sm-10">
            <span class="add-invoice-item glyphicon glyphicon-plus blue" aria-hidden="true"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button id="pdf-button" type="submit" class="btn btn-default">download invoice pdf</button>
        </div>
    </div>

</form>