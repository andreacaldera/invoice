<form role="form" class="form-horizontal" method="post">

    <% fields.forEach(function(field){ %>

    <div>
        <div class="control-group" style="display:inline-block">
            <label class="control-label" for="placeholder">placeholder</label>

            <div class="controls" style="display:inline-block">
                <input placeholder="placeholder" type='input' name='placeholder' value="<%= field.placeholder %>">
            </div>
        </div>
        <div class="control-group" style="display:inline-block">
            <label class="control-label" for="placeholder">value</label>

            <div class="controls" style="display:inline-block">
                <input placeholder="value" type='input' name='value' value="<%= field.value %>">
            </div>
        </div>
        <div class="control-group" style="display:inline-block">
            <label class="control-label" for="placeholder">label</label>

            <div class="controls" style="display:inline-block">
                <input placeholder="label" type='input' name='label' value="<%= field.label %>">
            </div>
        </div>
    </div>

    <% }) %>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-default">save</button>
        </div>
    </div>
</form>